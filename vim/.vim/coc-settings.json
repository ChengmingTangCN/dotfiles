{
  "semanticTokens.enable": true,
  "inlayHint.enable": false,
  "clangd.path": "clangd",
  "clangd.compilationDatabaseCandidates": [
    "build"
  ],
  "clangd.fallbackFlags": [
    "-std=c++20"
  ],
  "clangd.arguments": [
    "--log=verbose",
    "-j=4",
    "--background-index",
    "--clang-tidy",
    "--fallback-style=LLVM",
    "--header-insertion=iwyu",
    "--completion-style=bundled",
    "--function-arg-placeholders=0"
  ]
}
